<title> Sign in </title>
<h1 class="center">Sign in</h1>

<div class="row">
	<div class="span6 offset6">
		<%= form_for(:session, url: sessions_path) do |f| %>

		<%= f.label :email %>
		<%= f.text_field :email %>

		<%= f.label :password %>
		<%= f.password_field :password %>

		<%= f.submit "Sign in", class: "btn" %>

	<% end %>

		<p>New User? <%= link_to "Sign Up Now!", signup_path %></p>
	</div>
</div>